          <!-- **************** FIND USER FORM START ******************  -->

          <button class="collapsible">Find User <a style="float: right"> + </a></button>
          <div class="content">
              <form>
                <div class="form-group row form-top">
                    <label for="input-first" class="col-sm-4  col-form-labe">First name</label>
                    <div class="col-sm-8">
                        <input type="text" class="form-control" id="input-first" name="firstName" placeholder="Name">
                    </div>
                </div>
                <div class="form-group row">
                    <label for="input-last" class="col-sm-4  col-form-label">Last name</label>
