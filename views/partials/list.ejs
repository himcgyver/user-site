<table class="table table-striped table-sides">
  <thead>
    <tr>
      <th scope="col">First Name</th>
      <th scope="col">Last Name</th>
      <th scope="col">Address</th>
      <th scope="col">Username</th>
      <th scope="col">Password</th>
      <th scope="col">Zip Code</th>
      <th scope="col" colspan="2">Actions</th>
    </tr>
  </thead>
  <% for (var i = 0; i < users.length; i++) { %>
  <tr>
    <td>
      <%= users[i].firstname %>
    </td>
    <td>
      <%= users[i].lastname %>
    </td>
    <td>
      <%= users[i].address %>
    </td>
    <td>
      <%= users[i].username %>
    </td>
    <td>
      <%= users[i].password %>
    </td>
    <td>
      <%= users[i].zipcode %>
    </td>
    <td><a href="javascript:void();" class="update<%= i %>" name="update-anchor">Update</a></td>
    <td><a href="javascript:void();" class="update<%= i %>" name="delete-anchor">Delete</a></td>
  </tr>
  <tr class="hidden" name="update<%= i %>">
    <td class="editable">
      <input type="text" size="4" value="<%= users[i].firstname %>">
    </td>
    <td class="editable">
      <input type="text" size="4" value="<%= users[i].lastname %>">
    </td>
    <td class="editable">
      <input type="text" size="4" value="<%= users[i].address %>">
    </td>
    <td class="editable">
      <input type="text" size="4" value="<%= users[i].username %>">
    </td>
    <td class="editable">
      <input type="text" size="4" value="<%= users[i].password %>">
    </td>
    <td class="editable">
      <input type="text" size="4" value="<%= users[i].zipcode %>">
    </td>
    <td>
      <input type="hidden" value="<%= users[i]._id %>">
    </td>
    <td>
      <button type="submit" id="button<%= i %>">Save</button>
    </td>
  </tr>
  <% } %>
</table>
